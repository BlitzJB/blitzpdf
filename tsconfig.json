{
    "compilerOptions": {
        "target": "ES2018",
        "module": "commonjs",
        "lib": [
            "es2018",
            "DOM"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "jsx": "react",
        "types": [
            "jest",
            "node"
        ]
    },
    "include": [
        "src/**/*",
        "__tests__/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}